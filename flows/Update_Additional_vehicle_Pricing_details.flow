<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>53.0</apiVersion>
    <description>When ever opportunity got pricing details , This flow will get triggered and update all the pricing details of related additional vehicles for SVO bespoke record type</description>
    <interviewLabel>Update Additional vehicle Pricing details {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Update Additional vehicle Pricing details</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>FREE_FORM_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>update_additional_vehicles</name>
        <label>update additional vehicles</label>
        <locationX>161</locationX>
        <locationY>388</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Opportunity__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>Contribution__c</field>
            <value>
                <elementReference>$Record.SO_Contribution__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Cost_Price__c</field>
            <value>
                <elementReference>$Record.SO_Cost_Price__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>List_Price__c</field>
            <value>
                <elementReference>$Record.SO_List_Price__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Retail_Price__c</field>
            <value>
                <elementReference>$Record.SO_Retail_Price__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Revenue__c</field>
            <value>
                <elementReference>$Record.SO_Revenue__c</elementReference>
            </value>
        </inputAssignments>
        <object>Additional_Vehicles__c</object>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>50</locationY>
        <connector>
            <targetReference>update_additional_vehicles</targetReference>
        </connector>
        <filterLogic>(1 OR 2 OR 3 OR 4 OR 5 ) AND 6</filterLogic>
        <filters>
            <field>SO_Retail_Price__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>SO_List_Price__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>SO_Cost_Price__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>SO_Contribution__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>SO_Revenue__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>RecordTypeId</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>0120N000000ROlNQAW</stringValue>
            </value>
        </filters>
        <object>Opportunity</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
